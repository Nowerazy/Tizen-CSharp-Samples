{
  "constants": {
    "STYLE_DIR": "/home/owner/apps_rw/org.tizen.example.ScriptLayoutSample/res/images/CustomTheme"
  },
  "styles": {
    // Change an icon size, see if it gets properly re-sized
    "RadioButton": {
      "unselectedVisual": {
        "visualType": "IMAGE",
        "url": "{STYLE_DIR}/Radio_Button_Unselected.png"
      },
      "selectedVisual": {
        "visualType": "IMAGE",
        "url": "{STYLE_DIR}/Radio_Button_Selected.png"
      },
      "label": {
        "visualType": "TEXT",
        "horizontalAlignment": "CENTER",
        "verticalAlignment": "CENTER"
      }
    },
    "CheckBoxButton": {
      "unselectedVisual": {
        "visualType": "IMAGE",
        "url": "{STYLE_DIR}/CheckBox_UnSelected.png"
      },
      "selectedVisual": {
        "visualType": "IMAGE",
        "url": "{STYLE_DIR}/CheckBox_Selected.png"
      },
      "label": {
        "visualType": "TEXT",
        "horizontalAlignment": "CENTER",
        "verticalAlignment": "CENTER"
      }
    },
    "PushButton": {
      "unselectedBackgroundVisual": {
        "visualType": "COLOR",
        "mixColor": [
          0.1,
          0.1,
          0.1,
          0.9
        ]
      },
      "selectedBackgroundVisual": {
        "visualType": "COLOR",
        "mixColor": [
          0.5,
          0.5,
          0.5,
          1.0
